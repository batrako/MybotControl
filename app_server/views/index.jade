extends layout

block content

 if (user)
   span
    img(src='#{user.photo}')
    p #{user.name} ( #{user.email} ) 
   .container
        .row
          .col-md-4.col-sm-6.col-xs-12(ng-repeat="Aldea in data.dataVillages")
            .panel.panel-primary
              .panel-heading
                table
                  tr
                    td(style='width:80%',valign='top')
                      h4
                        .label.label-warning Aldea {{Aldea.Aldea}}
                    td(align='right', valign='center')
                      h6
                        .label.label-info Last Updated: {{Aldea.Timestamp}}
              .panel-body
                table
                  tr
                    td
                      img(src='/images/Gold_Storage11.png',width='80', height='80')
                    td(style='width:80%')
                      .progress
                        .progress-bar.progress-bar-success(style='width: {{Aldea.PctOro}}%')
                      .label.label-default(vertical-align: top) {{Aldea.Oro}}
                      &#32;
                      .label.label-success(vertical-align: top) {{Aldea.OroXhora}}
                  tr
                    td
                      img(src='/images/Elixir_Storage11.png',width='80', height='80')
                    td
                      .progress
                        .progress-bar.progress-bar-success(style='width: {{Aldea.PctElixir}}%')
                      .label.label-default(vertical-align: top) {{Aldea.Elixir}}
                      &#32;
                      .label.label-success(vertical-align: top) {{Aldea.ElixirXhora}}
                  tr
                    td
                      img(src='/images/Dark_Elixir_Storage6.png',width='80', height='80')
                    td
                      .progress
                        .progress-bar.progress-bar-success(style='width: {{Aldea.PctOscuro}}%')
                      .label.label-default(vertical-align: top) {{Aldea.Oscuro}}
                      &#32;
                      .label.label-success(vertical-align: top) {{Aldea.OscuroXhora}}
                table
                    tr
                      td(style='width:20%')
                        br
                        img(src='/images/Builder.png',width='50', height='50')
                        br
                        .label.label-danger {{Aldea.Constructores}} Libres
                      td(style='width:100%', align='center',valign='bottom')
                        br
                        center
                        img(src='/images/Trophy.png',width='40', height='40')
                        br
                        .label.label-danger {{Aldea.Copas}}
                      td(style='width:20%',align='right')
                        br
                        br
                        img(src='/images/gems_big_icon.png',width='30', height='30')
                        br
                        .label.label-danger {{Aldea.Gemas}}
                    
              .panel-footer
                table
                  tr
                    td(ng-if="Aldea.Status === 1", style='width:100%')
                      img(src='/images/start.jpg',width='30', height='30')
                    td(ng-if="Aldea.Status === 0", style='width:100%') 
                      img(src='/images/stop.jpg',width='30', height='30')
                    td(ng-if="Aldea.Status === 2", style='width:100%') 
                      img(src='/images/pause.jpg',width='30', height='30')
                    td(align='center',style='padding: 3px')
                      span
                        .button.btn-sm.btn-success(ng-click="start(Aldea.Aldea)")
                          span
                            .glyphicon.glyphicon-play
                    td(align='center',style='padding: 3px')
                      span
                        .button.btn-sm.btn-warning(ng-click="pause(Aldea.Aldea)")
                          span
                            .glyphicon.glyphicon-pause
                    td(align='center',style='padding: 3px')
                      span
                        .button.btn-sm.btn-danger(ng-click="restart(Aldea.Aldea)")
                          span
                                .glyphicon.glyphicon-retweet
  else
    a(href='auth/facebook') Login con Facebook
